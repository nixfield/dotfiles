# Switch escape and caps if tty and no passwd required:
sudo -n loadkeys ${XDG_DATA_HOME:-$HOME/.local/share}/larbs/ttymaps.kmap 2>/dev/null

[[ -z $DISPLAY && $XDG_VTNR -eq 1 ]] && exec startx

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/home/nix/D/.miniconda/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/nix/D/.miniconda/etc/profile.d/conda.sh" ]; then
        . "/home/nix/D/.miniconda/etc/profile.d/conda.sh"
    else
        export PATH="/home/nix/D/.miniconda/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<
