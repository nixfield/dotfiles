#!/bin/sh

filter() { mpc --format '[%title%|%file%]' | sed "/^volume:/d;s/\\[paused\\].*/Ô££/g;/\\[playing\\].*/d" | paste -sd ' ' -; }

pidof -x sb-mpdup >/dev/null 2>&1 || sb-mpdup >/dev/null 2>&1 &

# if playerctl -p spotify status | grep Playing > /dev/null
# then
#   # show spotify play song
#   echo "ÔÄÅ  $(playerctl -p spotify metadata -f '{{title}}')"
# elif mpc status | awk 'NR==2' | grep 'playing' > /dev/null 
# then
#   # show mpc play song
#   echo "ÔÄÅ  $(mpc status |  mpc --format '[%title%|%file%]' | sed "/^volume:/d;s/\\[paused\\].*/Ô££/g;/\\[playing\\].*/d" | paste -sd ' ' -; )"
# elif playerctl -p spotify status | grep Paused > /dev/null 
# then
#   # show spotify pause song
#   echo "ÔÄÅ  $(playerctl -p spotify metadata -f '{{title}}') Ô££"
# else
#   # show mpc pause song
#   echo "ÔÄÅ  $(mpc status |  mpc --format '[%title%|%file%]' | sed "/^volume:/d;s/\\[paused\\].*/Ô££/g;/\\[playing\\].*/d" | paste -sd ' ' -; )"
# fi

case $BLOCK_BUTTON in
	1) mpc status | filter ; setsid -f "$TERMINAL" -e ncmpcpp ;;  # right click, pause/unpause
	2) mpc toggle | filter ;;  # right click, pause/unpause
	3) mpc status | filter ; notify-send "üéµ Music module" "\- Shows mpd song playing.
- Ô££ when paused.
- Left click opens ncmpcpp.
- Middle click pauses.
- Scroll changes track.";;  # right click, pause/unpause
	4) mpc prev   | filter ;;  # scroll up, previous
	5) mpc next   | filter ;;  # scroll down, next
	6) mpc status | filter ; "$TERMINAL" -e "$EDITOR" "$0" ;;
	*) mpc status | filter ;;
esac
