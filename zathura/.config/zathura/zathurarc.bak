set sandbox none
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set selection-clipboard clipboard
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print

set selection-clipboard clipboard
set statusbar-home-tilde true
set adjust-open "best-fit"

# Light/Default mode settings:
# 
#
set notification-error-bg       "#ac8a8c" # Red
set notification-error-fg       "#f0f0f0" # Foreground
set notification-warning-bg     "#aca98a" # Orange
set notification-warning-fg     "#4c4c4c" # Selection
set notification-bg             "#0f0f0f" # Background
set notification-fg             "#f0f0f0" # Foreground

set completion-bg               "#0f0f0f" # Background
set completion-fg               "#4c4c4c" # Comment
set completion-group-bg         "#0f0f0f" # Background
set completion-group-fg         "#4c4c4c" # Comment
set completion-highlight-bg     "#4c4c4c" # Selection
set completion-highlight-fg     "#f0f0f0" # Foreground

set index-bg                    "#0f0f0f" # Background
set index-fg                    "#f0f0f0" # Foreground
set index-active-bg             "#4c4c4c" # Current Line
set index-active-fg             "#f0f0f0" # Foreground

set inputbar-bg                 "#0f0f0f" # Background
set inputbar-fg                 "#f0f0f0" # Foreground
set statusbar-bg                "#0f0f0f" # Background
set statusbar-fg                "#f0f0f0" # Foreground

set highlight-color             "#8aabac" # Orange
set highlight-active-color      "#9ec49f" # Pink

set default-bg                  "#0f0f0f" # Background
set default-fg                  "#f0f0f0" # Foreground

set render-loading              true
set render-loading-fg           "#0f0f0f" # Background
set render-loading-bg           "#f0f0f0" # Foreground

# Recolor mode settings
#
#
set recolor-lightcolor          "#0f0f0f" # Background
set recolor-darkcolor           "#f0f0f0" # Foreground

# Startup options
#
#
set adjust-open width
set recolor true
map <C-Tab> toggle_statusbar
set guioptions ""
